SKIPCHECK;

[] = IF( ELPAR( 'Version', !Version, 1 ) @= 'Aktif' & DB( 'V_P', !Version, !Period, 'Actual - Plan' ) @= 'Plan', CONTINUE, STET );

['Amount'] = N: IF(DB('V_P', !Version, !Period, 'Actual - Plan') @= 'Actual', STET, CONTINUE);

['Birim Fiyat', {'8080200001','8080400001'}] = N: IF(DB( 'V_P', !Version, !Period, 'Actual - Plan') @= 'Actual', ['Amount'] \ ['m3'], CONTINUE);

['Birim Fiyat','8080100001'] = N: IF(DB( 'V_P', !Version, !Period, 'Actual - Plan') @= 'Actual', ['Amount'] \ ['kw'], CONTINUE);
    
['Birim Fiyat'] = 
    C: IF ( !Enerji_Kalemleri @= '8080100001', 
            ['Amount'] \ ['kw'], 
            ['Amount'] \ ['m3'] );

['Amount'] =
	N: IF ( !Enerji_Kalemleri @= '8080100001',
			['Birim Fiyat'] * ['kw'],
			['Birim Fiyat'] * ['m3']);
    
FEEDERS;

['Aktif', 'Birim Fiyat'] => ['Amount'];

['Aktif', {'8080100001','8080200001', '8080400001'}, 'Final Amount'] => DB( 'Genel Giderler', !Enerji_Kalemleri, !Masraf_Kar_Merkezleri, 'İnşaat ve Yatırım', !Version, !Period, 'Hesaplanan Tutar' );
