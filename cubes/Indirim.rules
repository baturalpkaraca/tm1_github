SKIPCHECK;

[] = IF( ELPAR( 'Version', !Version, 1 ) @= 'Aktif', CONTINUE, STET );

['İndirim Tutarı'] = N: IF(DB( 'V_P', !Version, !Period, 'Actual - Plan'  ) @= 'Actual',
            IF(ELPAR('İndirimler', !İndirimler, 1) @= 'Markdown',
			DB('Satış', 'Koçtaş Total', !Version, !Period, IF( ELPAR('İndirimler', !İndirimler, 1) @= 'Paro İndirimleri', 'Paro İndirim', 'Diğer İndirim')) * 
			DB('Indirim', !İndirimler, !Version, !Period, 'Baz Oran') \
			DB('Indirim', 'Diğer İndirimler', !Version, !Period, 'Baz Oran'), CONTINUE), CONTINUE);

['İndirim Tutarı'] = N: IF(DB( 'V_P', !Version, !Period, 'Actual - Plan'  ) @= 'Actual',
          DB('Satış', 'Koçtaş Total', !Version, !Period, IF( ELPAR('İndirimler', !İndirimler, 1) @= 'Paro İndirimleri', 'Paro İndirim', 'Diğer İndirim')) * 
          DB('Indirim', !İndirimler, !Version, !Period, 'Baz Oran') \
          DB('Indirim', ELPAR('İndirimler', !İndirimler, 1), !Version, !Period,'Baz Oran'), CONTINUE);

['Baz Oran'] = N: IF(DB( 'V_P', !Version, !Period, 'Actual - Plan'  ) @<> 'Actual', 0, CONTINUE);

FEEDERS;

['Aktif', 'Baz Oran'] => ['İndirim Tutarı'];